{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true
  },
  "include": [
    "*.ts",
    "*.js",
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
} 